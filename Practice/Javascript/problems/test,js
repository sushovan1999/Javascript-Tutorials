(function(){
    function persistence(num) {
        let str = num.toString();
        if (str.length === 1) {
          return 0;
        }
       let nextNum = str.split('').reduce((a, b) => a * b, 1);
        return 1 + persistence(nextNum);
      }

    //   function persistence(num) {
